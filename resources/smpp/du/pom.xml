<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.restcomm.slee.resource.smpp</groupId>
		<artifactId>smpp-server-ra</artifactId>
		<version>7.1.0-SNAPSHOT</version>
	</parent>

	<artifactId>smpp-server-ra-du</artifactId>
	<name>Core : SLEE : SMPP Server RA DU</name>

	<dependencies>
		<!-- components -->
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>smpp-server-ra-library</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>smpp-server-ra-events</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>smpp-server-ra-ratype</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>smpp-server-ra-ra</artifactId>
			<version>${project.version}</version>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<id>prepare-jboss-jar</id>
						<phase>package</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<tasks>
								<unzip overwrite="true" src="target/${project.build.finalName}.jar" dest="target/jboss-pack" />
								<replace file="target/jboss-pack/META-INF/jboss-dependency.xml"
									value=""
									token="&lt;item whenRequired=&quot;Real&quot; dependentState=&quot;Installed&quot; attribute=&quot;inet-address&quot; required=&quot;true&quot;&gt;jboss.as:interface=public&lt;/item&gt;" />
								<zip basedir="target/jboss-pack" destfile="target/smpp-server-ra-du-jboss-${project.version}.jar" />
							</tasks>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

	<profiles>
		<profile>
			<id>du-jboss5</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>org.mobicents.tools</groupId>
						<artifactId>maven-du-plugin</artifactId>
						<version>${maven.du.plugin.jboss5.version}</version>
						<executions>
							<execution>
								<goals>
									<goal>copy-dependencies</goal>
									<goal>generate-descriptor</goal>
									<goal>generate-ant-management-script</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>du-wildfly</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.mobicents.tools</groupId>
						<artifactId>maven-du-plugin</artifactId>
						<version>${maven.du.plugin.wildfly.version}</version>
						<executions>
							<execution>
								<goals>
									<goal>copy-dependencies</goal>
									<goal>generate-descriptor</goal>
									<goal>generate-ant-management-script</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>

		<profile>
			<id>deploy-module-jboss5</id>
			<build>
				<plugins>
					<plugin>
						<artifactId>maven-antrun-plugin</artifactId>
						<executions>
							<execution>
								<id>deploy-DU</id>
								<phase>install</phase>
								<goals>
									<goal>run</goal>
								</goals>
								<configuration>
									<tasks>
										<copy overwrite="true" file="target/smpp-server-ra-du-jboss-${project.version}.jar" todir="${jboss.home}/server/${node}/deploy" />
									</tasks>
								</configuration>
							</execution>
							<execution>
								<id>undeploy-DU</id>
								<phase>clean</phase>
								<goals>
									<goal>run</goal>
								</goals>
								<configuration>
									<tasks>
										<delete file="${jboss.home}/server/${node}/deploy/smpp-server-ra-du-jboss-${project.version}.jar" />
									</tasks>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>deploy-module-wildfly</id>
			<build>
				<plugins>
					<plugin>
						<artifactId>maven-antrun-plugin</artifactId>
						<executions>
							<execution>
								<id>deploy-DU</id>
								<phase>install</phase>
								<goals>
									<goal>run</goal>
								</goals>
								<configuration>
									<tasks>
										<copy overwrite="true" file="target/${project.build.finalName}.jar" todir="${jboss.home}/standalone/deployments" />
									</tasks>
								</configuration>
							</execution>
							<execution>
								<id>undeploy-DU</id>
								<phase>clean</phase>
								<goals>
									<goal>run</goal>
								</goals>
								<configuration>
									<tasks>
										<delete file="${jboss.home}/standalone/deployments/${project.build.finalName}.jar" />
									</tasks>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

</project>
